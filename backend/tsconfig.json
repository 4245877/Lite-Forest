{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // главное для TSX:
    "jsx": "react-jsx",

    // чтобы TS видел типы React (у вас раньше было только "node"):
    "types": ["node", "react", "react-dom"],

    // полезно для типизации HTML-атрибутов и т.п. в JSX
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
